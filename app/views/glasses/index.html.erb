<section id="index">
  <div class="container">
    <div class="indexLeft"></div>
    <div class="indexRight">
      <div class="glass-cards">
        <% @glasses.each do |glass| %>
          <div class="glass-card">
            <%= link_to glass_path(glass) do %>
              <img src="<%= cl_image_path glass.photos[0].key %>" onmouseover="this.src='<%= cl_image_path glass.photos[1].key %>'" onmouseout="this.src='<%= cl_image_path glass.photos[0].key %>'" id="glassCardImg" alt="<%= glass.sku %>">
              <h4><%= glass.brand %> <%= glass.name %></h4>
              <h4>â‚¬<%= glass.price %></h4>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</section>
