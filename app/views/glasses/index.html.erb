<section id="index">
  <div class="container">
    <div class="indexLeft">
      <h3>Filtri</h3>
      <ul>
        <li>
          <h4>Brand</h4>
           <i data-feather="chevron-down"></i>
        </li>
        <li>
          <h4>Montatura</h4>
           <i data-feather="chevron-down"></i>
        </li>
        <li>
          <h4>Prezzo</h4>
           <i data-feather="chevron-down"></i>
        </li>
      </ul>
    </div>
    <div class="indexNav"></div>
    <i data-feather="chevron-left" class="indexBrowse browseLeft"></i>
    <div class="indexRight">
      <h1>I nostri occhiali</h1>
      <div class="glass-cards">
        <% @glasses.take(6).each do |glass| %>
          <div class="glass-card">
            <%= link_to glass_path(glass) do %>
              <img src="<%= cl_image_path glass.photos[0].key %>" onmouseover="this.src='<%= cl_image_path glass.photos[1].key %>'" onmouseout="this.src='<%= cl_image_path glass.photos[0].key %>'" id="glassCardImg" alt="<%= glass.sku %>">
              <h4><%= glass.brand %> <%= glass.name %></h4>
              <h4>â‚¬<%= glass.price %></h4>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
    <i data-feather="chevron-right" class="indexBrowse browseRight"></i>
  </div>
</section>
